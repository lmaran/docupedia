{
    // 1. Global settins. We can overwrite them at the language level, if necessary
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode", // set up Prettier as default formatter
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit" // e.g, replace 'let' with 'const' on save, if applicable
    },
    "cSpell.words": ["docupedia", "katex", "recaptcha"],
    "cSpell.diagnosticLevel": "Hint"

    // 2. Local settings (language level)
    // "[handlebars]": {
